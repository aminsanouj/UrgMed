<%= render partial: 'partials/searchbar_city', locals: { query_pro: @search_query_pro } %>
<%= render partial: 'partials/searchbar_pro', locals: { query_city: @search_query_city } %>

<div class="container-wrapper">
  <div class="container-map"
    style="width: 100%; height: 480px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div class="container-results" data-professional-target="details">
    <% if @professionals.any? %>
      <h2>Search Results:</h2>
      <%= render partial: 'professionals/professional_card', collection: @professionals, as: :professional %>
      <%= will_paginate @professionals %>
    <% else %>
      <p>No professionals found.</p>
    <% end %>
  </div>
</div>
