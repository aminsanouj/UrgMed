<div class="container-wrapper" data-controller="tags search">
  <div class="container-left">
    <div class="search-header">
      <div class="search-searchbar-city">
        <%= render partial: 'partials/searchbar_city', locals: { query_city: @search_query_city, controller_attribute: "autocomplete search geolocation" } %>
      </div>
      <div class="searchtags">
        <button class="tag medecin" data-tag="Médecin" data-action="click->tags#filter">Médecin</button>
        <button class="tag pharmacie" data-tag="Pharmacie" data-action="click->tags#filter">Pharmacie</button>
        <button class="tag dentiste" data-tag="Dentiste" data-action="click->tags#filter">Dentiste</button>
        <button class="tag urgences" data-tag="Urgences" data-action="click->tags#filter">Urgences</button>
      </div>
    </div>
    <div class="container-map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="container-right">
    <div class="header">
      <h2>Résultats :</h2>
      <%= render 'partials/open_now' %>
    </div>
    <div class="container-results" data-tags-target="results" data-search-target="results">
      <% if @professionals.any? %>
        <div class="search-professional-card">
          <%= render partial: 'professionals/professional_card', collection: @professionals, as: :professional %>
        </div>
      <% else %>
        <p>No professionals found.</p>
      <% end %>
    </div>
  </div>
</div>
