<div class="container-wrapper">
  <div class="container-left">
    <div class="searchbars">
      <%= render partial: 'partials/searchbar_city', locals: { query_city: @search_query_city, controller_attribute: "autocomplete search geolocation" } %>
      <%= render partial: 'partials/searchbar_pro', locals: { query_pro: @search_query_pro } %>
    </div>
    <div class="container-map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="container-right">
    <div class="header">
      <h2>Search Results:</h2>
      <form data-controller="search" data-action="submit->search#submitForm">
        <div class="filter-toggle">
          <input type="checkbox" id="filter-open-now" data-action="change->search#toggleFilter" data-search-target="input" <%= 'checked' if params[:open_now] == 'true' %>>
          <label for="filter-open-now">
            <span class="slider"></span>
            <span class="label-text">Open Now</span>
          </label>
        </div>
        <input type="hidden" name="query_pro" value="<%= @search_query_pro %>">
        <input type="hidden" name="query_city" value="<%= @search_query_city %>">
        <!-- Ajoutez d'autres champs cachés si nécessaires -->
      </form>
    </div>
    <div class="container-results" data-filter-target="results">
      <% if @professionals.any? %>
        <div class="search-professional-card">
          <%= render partial: 'professionals/professional_card', collection: @professionals, as: :professional %>
        </div>
      <% else %>
        <p>No professionals found.</p>
      <% end %>
    </div>
  </div>
</div>
