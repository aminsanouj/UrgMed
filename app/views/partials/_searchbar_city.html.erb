<form class="search-container" action="/search" method="get" data-controller="autocomplete search" data-autocomplete-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  <%= simple_form_for :search, html: { class: 'form-inline' } do |f| %>
    <%= f.input :address, label: false, input_html: { id: "search-bar", name: "query_city", value: params[:query_city], placeholder: "Dans quelle ville Ãªtes-vous ?", data: { action: "input->autocomplete#initAutocomplete", autocomplete_target: "input", search_target: "input" } }, wrapper: false %>
    <%= hidden_field_tag :query_pro, params[:query_pro] %>

    <button type="submit" data-action="search->search#submitForm"><img class="search-icon" src="http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png"></button>
    <%= image_tag 'cross_search.svg', class: 'clear-icon', alt: 'Clear', data: { action: "click->search#clear", search_target: "clear" } %>
  <% end %>
</form>
