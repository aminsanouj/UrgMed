<div class="contact-form-container">
  <h2 class="contact-form-header">Contactez-nous</h2>

  <% if flash[:contact_notice] %>
    <div id="notification" class="notification <%= flash[:contact_notice_type] %>">
      <%= flash[:contact_notice] %>
    </div>
    <script>
      setTimeout(function() {
        document.getElementById('notification').style.display = 'none';
      }, 5000);
    </script>
  <% end %>

  <%= form_with url: contact_path, local: true, html: { class: 'contact-form-fields' } do |form| %>
    <div class="contact-form-group">
      <%= form.label :name, "Prénom et Nom" %>
      <%= form.text_field :name, placeholder: "Entrez votre prénom et nom", class: 'contact-form-control' %>
    </div>

    <div class="contact-form-group">
      <%= form.label :email, "Email" %>
      <%= form.email_field :email, placeholder: "Entrez votre email", class: 'contact-form-control' %>
    </div>

    <div class="contact-form-group">
      <%= form.label :subject, "Sujet" %>
      <%= form.text_field :subject, placeholder: "Quel est le sujet de votre message ?", class: 'contact-form-control' %>
    </div>

    <div class="contact-form-group">
      <%= form.label :message, "Message" %>
      <%= form.text_area :message, placeholder: "Tapez votre message", class: 'contact-form-control' %>
    </div>

    <div class="contact-form-group">
      <%= form.submit "Envoyer le message", class: 'contact-form-submit' %>
    </div>
  <% end %>
</div>
